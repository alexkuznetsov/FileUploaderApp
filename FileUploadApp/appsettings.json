{
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "%FILEUPLOADERAPP_LOGS_BASE%/log.txt",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      }
    ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  
  "jwt": {
    "SecretKey": "%FILEUPLOADERAPP_JWTSECRET%",
    "Issuer": "FileUploadApp",
    "ExpiryMinutes": 60,
    "ValidateLifetime": true,
    "ValidateAudience": false
  },
  
  "AllowedHosts": "*",
  
  "fileStore": {
    "BasePath": "%FILEUPLOADERAPP_FILES_BASE%"
  },
  
  "conf": {
    "AllowedContentTypes": [
      "image/jpeg",
      "image/png",
      "image/bmp",
      "image/x-windows-bmp",
      "image/gif",
      "image/tiff",
      "application/x-7z-compressed"
    ],
    "Mappings": {
      "iVBORw": "image/png",
      "/9j/4A": "image/jpeg",
      "Qk0=": "image/bmp",
      "SUkq": "image/tiff",
      "R0lG": "image/gif",
      "N3q8rw==": "application/x-7z-compressed"
    }
  }
}
